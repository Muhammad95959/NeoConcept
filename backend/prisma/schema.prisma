generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id                   String       @id @default(uuid())
  createdAt            DateTime     @default(now())
  email                String
  username             String
  password             String?
  googleId             String?      @unique
  role                 Role
  emailConfirmed       Boolean      @default(false)
  confirmEmailToken    String?
  confirmEmailExpires  DateTime?
  resetPasswordOTP     String?
  resetPasswordExpires DateTime?
  passwordChangedAt    DateTime?
  currentTrackId       String?
  currentTrack         Track?       @relation(fields: [currentTrackId], references: [id])
  deletedAt            DateTime?
  userTracks           UserTrack[]
  Courses              Course[]
  memberships          Membership[]
  Resources            Resource[]
  Post                 Post[]

  @@map("users")
}

model Track {
  id          String      @id @default(uuid())
  name        String
  description String?
  createdAt   DateTime    @default(now())
  userTracks  UserTrack[]
  courses     Course[]
  users       User[]

  @@map("tracks")
}

model UserTrack {
  userId  String
  trackId String
  user    User   @relation(fields: [userId], references: [id])
  track   Track  @relation(fields: [trackId], references: [id])

  @@id([userId, trackId])
  @@map("user_tracks")
}

model Course {
  id          String       @id @default(uuid())
  name        String
  description String?
  createdAt   DateTime     @default(now())
  createdBy   String
  trackId     String
  creator     User         @relation(fields: [createdBy], references: [id])
  track       Track        @relation(fields: [trackId], references: [id])
  memberships Membership[]
  Resources   Resource[]
  Post        Post[]

  @@map("courses")
}

model Membership {
  id           String   @id @default(uuid())
  userId       String
  courseId     String
  roleInCourse Role
  joinedAt     DateTime @default(now())
  user         User     @relation(fields: [userId], references: [id])
  course       Course   @relation(fields: [courseId], references: [id])

  @@map("memberships")
}

model Resource {
  id         String   @id @default(uuid())
  uploadedBy String
  courseId   String
  uploadedAt DateTime @default(now())
  fileName   String
  fileType   String
  fileUrl    String
  fileKey    String
  user       User     @relation(fields: [uploadedBy], references: [id])
  course     Course   @relation(fields: [courseId], references: [id])

  @@map("resources")
}

model Post {
  id         String   @id @default(uuid())
  uploadedBy String
  courseId   String
  title      String
  content    String
  createdAt  DateTime @default(now())
  user       User     @relation(fields: [uploadedBy], references: [id])
  course     Course   @relation(fields: [courseId], references: [id])

  @@map("posts")
}

enum Role {
  ADMIN
  INSTRUCTOR
  STUDENT
}
