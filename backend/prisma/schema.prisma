generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id                   String       @id @default(uuid())
  createdAt            DateTime     @default(now())
  email                String
  username             String
  password             String?
  googleId             String?      @unique
  role                 Role
  emailConfirmed       Boolean      @default(false)
  confirmEmailToken    String?
  confirmEmailExpires  DateTime?
  resetPasswordOTP     String?
  resetPasswordExpires DateTime?
  passwordChangedAt    DateTime?
  currentTrackId       String?
  tracks               Track?       @relation("TrackCreator")
  currentTrack         Track?       @relation("UserTrack", fields: [currentTrackId], references: [id])
  deletedAt            DateTime?
  courseUsers          CourseUser[]
  Resources            Resource[]
  Post                 Post[]

  @@map("users")
}

model Track {
  id          String    @id @default(uuid())
  name        String
  description String?
  createdAt   DateTime  @default(now())
  deletedAt   DateTime?
  creatorId   String    @unique
  courses     Course[]
  creator     User      @relation("TrackCreator", fields: [creatorId], references: [id])
  users       User[]    @relation("UserTrack")

  @@map("tracks")
}

model Course {
  id          String       @id @default(uuid())
  name        String
  description String?
  createdAt   DateTime     @default(now())
  trackId     String
  track       Track        @relation(fields: [trackId], references: [id])
  deletedAt   DateTime?
  courseUsers CourseUser[]
  Resources   Resource[]
  Post        Post[]

  @@map("courses")
}

model CourseUser {
  userId       String
  courseId     String
  roleInCourse Role
  joinedAt     DateTime @default(now())
  user         User     @relation(fields: [userId], references: [id])
  course       Course   @relation(fields: [courseId], references: [id])

  @@id([userId, courseId])
  @@map("course_users")
}

model Resource {
  id         String   @id @default(uuid())
  uploadedBy String
  courseId   String
  uploadedAt DateTime @default(now())
  fileName   String
  fileType   String
  fileUrl    String
  fileKey    String
  user       User     @relation(fields: [uploadedBy], references: [id])
  course     Course   @relation(fields: [courseId], references: [id])

  @@map("resources")
}

model Post {
  id         String   @id @default(uuid())
  uploadedBy String
  courseId   String
  title      String
  content    String
  createdAt  DateTime @default(now())
  user       User     @relation(fields: [uploadedBy], references: [id])
  course     Course   @relation(fields: [courseId], references: [id])

  @@map("posts")
}

enum Role {
  ADMIN
  INSTRUCTOR
  ASSISTANT
  STUDENT
}
