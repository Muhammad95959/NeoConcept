generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id                   String           @id @default(uuid())
  createdAt            DateTime         @default(now())
  email                String
  username             String
  password             String?
  googleId             String?          @unique
  role                 Role
  emailConfirmed       Boolean          @default(false)
  confirmEmailToken    String?
  confirmEmailExpires  DateTime?
  resetPasswordOTP     String?
  resetPasswordExpires DateTime?
  passwordChangedAt    DateTime?
  currentTrackId       String?
  createdTrack         Track?           @relation("TrackCreator")
  currentTrack         Track?           @relation("UserTrack", fields: [currentTrackId], references: [id])
  deletedAt            DateTime?
  courseUsers          UserCourse[]
  Resources            Resource[]
  Post                 Post[]
  userTracks           UserTrack[]
  staffRequests        StaffRequest[]
  studentRequests      StudentRequest[]

  @@map("users")
}

model Track {
  id          String      @id @default(uuid())
  name        String
  description String?
  createdAt   DateTime    @default(now())
  deletedAt   DateTime?
  creatorId   String      @unique
  creator     User        @relation("TrackCreator", fields: [creatorId], references: [id])
  users       User[]      @relation("UserTrack")
  courses     Course[]
  userTracks  UserTrack[]

  @@map("tracks")
}

model UserTrack {
  userId   String
  trackId  String
  joinedAt DateTime @default(now())
  user     User     @relation(fields: [userId], references: [id])
  track    Track    @relation(fields: [trackId], references: [id])

  @@id([userId, trackId])
  @@map("user_tracks")
}

model Course {
  id            String         @id @default(uuid())
  name          String
  description   String?
  protected     Boolean        @default(true)
  createdAt     DateTime       @default(now())
  trackId       String
  track         Track          @relation(fields: [trackId], references: [id])
  deletedAt     DateTime?
  courseUsers   UserCourse[]
  Resources     Resource[]
  Post          Post[]
  staffRequests StaffRequest[]
  studentRequests StudentRequest[]

  @@map("courses")
}

model UserCourse {
  userId       String
  courseId     String
  roleInCourse Role
  joinedAt     DateTime @default(now())
  user         User     @relation(fields: [userId], references: [id])
  course       Course   @relation(fields: [courseId], references: [id])

  @@id([userId, courseId])
  @@map("user_courses")
}

model StaffRequest {
  id        String   @id @default(uuid())
  userId    String
  courseId  String
  message   String?
  status    Status   @default(PENDING)
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
  course    Course   @relation(fields: [courseId], references: [id])

  @@map("staff_requests")
}

model StudentRequest {
  id        String   @id @default(uuid())
  userId    String
  courseId  String
  status    Status   @default(PENDING)
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
  course    Course   @relation(fields: [courseId], references: [id])

  @@map("student_requests")
}

model Resource {
  id         String   @id @default(uuid())
  uploadedBy String
  courseId   String
  uploadedAt DateTime @default(now())
  fileName   String
  fileType   String
  fileUrl    String
  fileKey    String
  user       User     @relation(fields: [uploadedBy], references: [id])
  course     Course   @relation(fields: [courseId], references: [id])

  @@map("resources")
}

model Post {
  id         String   @id @default(uuid())
  uploadedBy String
  courseId   String
  title      String
  content    String
  createdAt  DateTime @default(now())
  user       User     @relation(fields: [uploadedBy], references: [id])
  course     Course   @relation(fields: [courseId], references: [id])

  @@map("posts")
}

enum Role {
  ADMIN
  INSTRUCTOR
  ASSISTANT
  STUDENT
}

enum Status {
  PENDING
  APPROVED
  REJECTED
}
